function changeLanguage(language) {
    // Masquer tous les éléments texte
    var elements = document.getElementsByClassName('langue');
    for (var i = 0; i < elements.length; i++) {
        elements[i].style.display = 'none';
    }

    // Afficher le texte correspondant à la langue sélectionnée
    document.getElementById('texte-' + language).style.display = 'block';
}
